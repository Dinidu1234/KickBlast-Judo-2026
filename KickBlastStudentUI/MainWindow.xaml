<Window x:Class="KickBlastStudentUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KickBlast Judo" Height="760" Width="1250" WindowStartupLocation="CenterScreen" Background="#F4F6F9">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="34"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1E293B" Padding="16">
                <StackPanel>
                    <TextBlock Text="KickBlast Judo" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,8,0,28"/>
                    <Button Name="DashboardButton" Content="Dashboard" Click="DashboardButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Name="AthletesButton" Content="Athletes" Click="AthletesButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Name="CalculatorButton" Content="Calculator" Click="CalculatorButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Name="HistoryButton" Content="History" Click="HistoryButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Name="SettingsButton" Content="Settings" Click="SettingsButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <TextBlock Name="PageTitleText" Text="Dashboard" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="12,0,0,0"/>
                        <Button Content="Logout" Width="90" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0" Click="LogoutButton_Click"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Margin="0,12,0,0" Style="{StaticResource CardStyle}">
                    <ContentControl Name="MainContent" />
                </Border>
            </Grid>
        </Grid>

        <StatusBar Grid.Row="1" Background="#E2E8F0">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="History loaded." />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
