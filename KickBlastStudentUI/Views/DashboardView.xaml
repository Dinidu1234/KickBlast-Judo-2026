<UserControl x:Class="KickBlastStudentUI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource StatsCardStyle}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Athletes" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Name="AthletesCountText" Text="0" FontSize="42" FontWeight="Bold" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource StatsCardStyle}" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="Calculations" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Name="CalculationsCountText" Text="0" FontSize="42" FontWeight="Bold" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource StatsCardStyle}" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Plans" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Name="PlansCountText" Text="0" FontSize="42" FontWeight="Bold" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <TextBlock Grid.Row="1" Name="UpdatedText" Margin="0,14,0,0" HorizontalAlignment="Right" FontStyle="Italic" Text="Updated:"/>
    </Grid>
</UserControl>
