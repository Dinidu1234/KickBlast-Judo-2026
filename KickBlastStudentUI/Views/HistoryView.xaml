<UserControl x:Class="KickBlastStudentUI.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox Name="AthleteFilterCombo" Width="220" Height="32"/>
            <ComboBox Name="MonthFilterCombo" Width="120" Height="32" Margin="8,0,0,0"/>
            <ComboBox Name="YearFilterCombo" Width="120" Height="32" Margin="8,0,0,0"/>
            <Button Content="Apply" Width="100" Margin="8,0,0,0" Click="ApplyButton_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" Name="HistoryGrid" AutoGenerateColumns="False" SelectionChanged="HistoryGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="2*"/>
                <DataGridTextColumn Header="Athlete" Binding="{Binding AthleteName}" Width="*"/>
                <DataGridTextColumn Header="Competitions" Binding="{Binding Competitions}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalCost}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="12" Margin="0,10,0,0">
            <TextBlock Name="DetailsText" Text="Select a row to view details." TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>
