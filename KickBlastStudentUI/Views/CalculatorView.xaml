<UserControl x:Class="KickBlastStudentUI.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="14">
            <StackPanel>
                <TextBlock Text="Monthly Calculator" FontWeight="Bold" FontSize="18" Margin="0,0,0,12"/>
                <TextBlock Text="Athlete"/>
                <ComboBox Name="AthleteComboBox" Margin="0,4,0,10"/>
                <TextBlock Text="Competitions This Month"/>
                <TextBox Name="CompetitionsTextBox" Margin="0,4,0,10" Text="0"/>
                <TextBlock Text="Coaching Hours / Week (0-5)"/>
                <TextBox Name="CoachingTextBox" Margin="0,4,0,16" Text="0"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Calculate" Width="110" Click="CalculateButton_Click"/>
                    <Button Content="Save" Width="90" Margin="8,0,0,0" Click="SaveButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="14">
            <TextBlock Name="OutputText" Text="Output will appear here." TextWrapping="Wrap" FontSize="15"/>
        </Border>
    </Grid>
</UserControl>
