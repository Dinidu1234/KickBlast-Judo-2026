<UserControl x:Class="KickBlastStudentUI.Views.AthletesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="14">
            <StackPanel>
                <TextBlock Text="Athlete Form" FontWeight="Bold" FontSize="18" Margin="0,0,0,12"/>
                <TextBlock Text="Name"/>
                <TextBox Name="NameTextBox" Margin="0,4,0,10"/>
                <TextBlock Text="Plan"/>
                <ComboBox Name="PlanComboBox" Margin="0,4,0,10"/>
                <TextBlock Text="Current Weight"/>
                <TextBox Name="CurrentWeightTextBox" Margin="0,4,0,10"/>
                <TextBlock Text="Category Weight"/>
                <TextBox Name="CategoryWeightTextBox" Margin="0,4,0,18"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Save" Width="84" Click="SaveButton_Click"/>
                    <Button Content="Delete" Width="84" Margin="8,0,0,0" Click="DeleteButton_Click"/>
                    <Button Content="Clear" Width="84" Margin="8,0,0,0" Click="ClearButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Name="SearchTextBox" Width="260" Height="32"/>
                <ComboBox Name="SearchPlanComboBox" Width="180" Height="32" Margin="8,0,0,0"/>
                <Button Content="Search" Width="100" Margin="8,0,0,0" Click="SearchButton_Click"/>
            </StackPanel>

            <DataGrid Grid.Row="1" Name="AthletesGrid" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="AthletesGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Plan" Binding="{Binding Plan}" Width="*"/>
                    <DataGridTextColumn Header="Current" Binding="{Binding CurrentWeight}" Width="*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding CategoryWeight}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
